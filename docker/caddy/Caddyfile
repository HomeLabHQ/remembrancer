{$SITE_URL} {
	handle /api/* {
		reverse_proxy api:8000
	}
	handle /admin/* {
		reverse_proxy /admin/* api:8000
	}
	handle {
		root * /usr/share/web
		file_server
		try_files {path} /index.html
	}
	handle /static/* {
		root * /static
		file_server
	}
	handle /attachments/* {
		root * /attachments
		file_server
	}
}
